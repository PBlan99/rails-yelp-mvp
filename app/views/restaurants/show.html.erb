<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<p><%= "Details for #{@restaurant.name}:"%></p>
<p><%= "Address: #{@restaurant.address}"%></p>
<p><%= "Phone_number: #{@restaurant.phone_number}"%></p>
<p><%= "Category: #{@restaurant.category}"%></p>

<p><%= "Reviews for this restaurant:"%></p>
<ul>
  <% @all_reviews_for_a_res.each do |review| %>
    <li><%= "content: #{review.content}" %></li>
    <li><%= "rating: #{review.rating}" %></li>
  <% end %>
</ul>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
